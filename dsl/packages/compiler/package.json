{
  "name": "@ranking-dsl/compiler",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "dslc": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build && cp src/browser.d.ts dist/browser.d.ts",
    "build:node": "tsc",
    "build:browser": "vite build && cp src/browser.d.ts dist/browser.d.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@jitl/quickjs-singlefile-browser-release-sync": "0.29.2",
    "@jitl/quickjs-wasmfile-release-sync": "0.29.2",
    "@ranking-dsl/generated": "workspace:*",
    "@ranking-dsl/runtime": "workspace:*",
    "esbuild": "^0.19.0",
    "quickjs-emscripten": "^0.29.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild-wasm": "^0.19.0",
    "vite": "^6.0.0"
  },
  "peerDependencies": {
    "esbuild-wasm": "^0.19.0"
  },
  "peerDependenciesMeta": {
    "esbuild-wasm": {
      "optional": true
    }
  }
}
