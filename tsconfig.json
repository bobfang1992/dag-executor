{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "plugins": [
      { "name": "@ranking-dsl/ts-plugin" }
    ]
  },
  "include": [
    "plans/**/*.plan.ts",
    "examples/plans/**/*.plan.ts",
    "plan-globals.d.ts"
  ]
}
